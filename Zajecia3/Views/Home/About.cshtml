@*Map*@
<h2 class="text-muted">Adres</h2>
<div id="map-container" class="z-depth-1-half map-container mb-3 border border-primary" style="height: 40vw" />
<script src="https://maps.google.com/maps/api/js"></script>
<script>
    // Regular map
    function regular_map() {
        var var_location = new google.maps.LatLng(49.812957, 19.011805);

        var var_mapoptions = {
            center: var_location,
            zoom: 14
        };

        var var_map = new google.maps.Map(document.getElementById("map-container"),
            var_mapoptions);
        var var_marker = new google.maps.Marker({
            position: var_location,
            map: var_map,
            title: "Bielsko-Biała"
        });
    }
    // Initialize maps
    google.maps.event.addDomListener(window, 'load', regular_map);
</script>
